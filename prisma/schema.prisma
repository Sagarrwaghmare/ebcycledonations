// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

// 1. USERS / DONORS
model User {
  id        Int        @id @default(autoincrement())
  name      String
  photoUrl  String?    // Optional: URL to image (Cloudinary/S3)
  createdAt DateTime   @default(now())
  updatedAt   DateTime @default(now())

  
  // A user can have multiple donations
  donations Donation[]
}

// 2. DONATIONS (The Cycles)
model Donation {
  id          Int      @id @default(autoincrement())
  studentName String   // Name of student receiving cycle
  standard    String   // Class/Standard
  schoolName  String
  location    String   // Google Map Link or City Name
  photoUrl    String?  // Optional: Photo of the specific cycle/student
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  // Foreign Key linking to User
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

// 3. CONFIG (The Kill Switch & Settings)
model Config {
  id            Int      @id @default(autoincrement())
  appName       String   @default("Cycle Project") // Just for reference
  
  // Your logic requirements:
  isActive      Boolean  @default(true) // First option: true/false
  lastChecked   DateTime @default(now()) // Second option: datetime stamp
}